#include "libft.h"

char	*ft_strdup(const char *s1)
{
	char	*copy;
	size_t	i;

	if (!s1)
		return (0);
	if (!(copy = (char*)malloc(ft_strlen(s1) + 1)))
		return (NULL);
	i = 0;
	while (i <= ft_strlen(s1))
	{
		copy[i] = s1[i];
		i++;
	}
	return (copy);
}
